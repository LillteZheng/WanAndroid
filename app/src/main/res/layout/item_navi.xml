<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="12dp"
    android:layout_marginStart="12dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/colorCard"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/item_navi_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="开发环境"
            app:layout_constraintTop_toTopOf="@id/content"
            app:layout_constraintLeft_toLeftOf="@id/content"
            android:layout_margin="10dp"
            android:textColor="@color/colorText"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/item_navi_child"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="开发环境"
            app:layout_constraintTop_toBottomOf="@id/item_navi_name"
            app:layout_constraintLeft_toLeftOf="@id/content"
            app:layout_constraintBottom_toBottomOf="@id/content"
            app:layout_constraintRight_toLeftOf="@id/item_navi_icon"
            android:layout_margin="12dp"
            android:textColor="@color/colorText"
            android:textSize="14sp"/>

        <ImageView
            android:id="@+id/item_navi_icon"
            android:layout_width="22dp"
            android:layout_height="22dp"
            app:layout_constraintTop_toTopOf="@id/content"
            app:layout_constraintBottom_toBottomOf="@id/content"
            app:layout_constraintRight_toRightOf="@id/content"
            android:layout_marginEnd="10dp"
            android:src="@mipmap/gray_enter"/>

    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>