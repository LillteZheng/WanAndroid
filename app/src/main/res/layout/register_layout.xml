<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">



    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/login_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:text="去登录"
        android:textColor="@color/main_color"
        android:textSize="15sp" />


    <ImageView
        android:id="@+id/login_login_iv"
        app:layout_constraintRight_toLeftOf="@id/login_text"
        app:layout_constraintTop_toTopOf="@id/login_text"
        app:layout_constraintBottom_toBottomOf="@id/login_text"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="5dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:padding="2dp"
        android:src="@mipmap/previes" />

    <com.zhengsr.wanandroid.view.UserView
        android:id="@+id/register_username"
        app:iv_bottomColor="@color/main_color"
        app:iv_bottomSize="1dp"
        app:iv_edHintColor="#999999"
        app:iv_edTextColor="@color/wechat"
        app:iv_edTextSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginStart="80dp"
        app:layout_constraintTop_toBottomOf="@+id/login_text"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="80dp" />

    <com.zhengsr.wanandroid.view.PasswordView
        android:id="@+id/register_password"
        app:iv_bottomColor="@color/main_color"
        app:iv_bottomSize="1dp"
        app:iv_edHintColor="#999999"
        app:iv_edTextColor="@color/wechat"
        app:iv_edTextSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/register_username"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="80dp" />

    <com.zhengsr.wanandroid.view.PasswordView
        android:id="@+id/register_repassword"
        app:iv_bottomColor="@color/main_color"
        app:iv_bottomSize="1dp"
        app:iv_edHintColor="#999999"
        app:iv_edTextColor="@color/wechat"
        app:iv_edTextSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/register_password"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="80dp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/register_tv"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        app:layout_constraintTop_toBottomOf="@id/register_repassword"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"
        android:background="@drawable/round_maincolor_shape"
        android:text="注册"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginStart="80dp"
        android:gravity="center"
        android:layout_marginEnd="80dp"

        />

</android.support.constraint.ConstraintLayout>