<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.zhengsr.ariesuilib.wieght.ArcImageView
        android:id="@+id/test"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@mipmap/beauty1"
        app:arc_height="-50dp"
        app:arc_scaleFactor="1.5"
        app:arc_scaleX="220dp"
        app:arc_scaleY="0dp"
        app:arc_blur="12"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.zhengsr.ariesuilib.wieght.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="230dp"
        android:src="@mipmap/beauty1"
        app:cv_boardColor="@color/main_color"
        app:cv_borderWidth="2dp"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




    <TextView
        android:id="@+id/login_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="15sp"
        android:textColor="@color/main_color"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_image"
        android:text="去注册"/>



    <com.zhengsr.wanandroid.view.UserView
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/login_text"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        app:iv_edHintColor="#999999"
        app:iv_edTextColor="@color/wechat"
        app:iv_edTextSize="16sp"
        app:iv_bottomColor="@color/main_color"
        app:iv_bottomSize="1dp"
        />

    <com.zhengsr.wanandroid.view.PasswordView
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/user_name"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        app:iv_edHintColor="#999999"
        app:iv_edTextColor="@color/wechat"
        app:iv_edTextSize="16sp"
        app:iv_bottomColor="@color/main_color"
        app:iv_bottomSize="1dp"
        />


</android.support.constraint.ConstraintLayout>